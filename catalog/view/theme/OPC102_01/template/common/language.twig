{% if languages|length > 1 %}
<form action="{{ action }}" method="post" enctype="multipart/form-data" class="js-form-language">
  <div class="language">
      <ul>
        {% for language in languages %}
          {% if language.code == code %}
            <li class="lang-current">
              <a href="javascript:void(0);">{{ language.format_name }}</a>
            </li>
          {% else %}
            <li>
              <a href="#" data-code="{{ language.code }}">{{ language.format_name }}</a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <input type="hidden" name="code" value="" />
      <input type="hidden" name="redirect" value="{{ redirect }}" />
  </div>
</form>
{% endif %}
